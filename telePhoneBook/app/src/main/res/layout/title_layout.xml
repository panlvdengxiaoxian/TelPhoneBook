<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:paddingLeft="7dp"
        android:paddingTop="11dp"
        android:text="通话"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.7" />


    <ImageView
        android:id="@+id/topbar_add_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@mipmap/icon_topbar_add" />
    <ImageView
        android:id="@+id/topbar_search_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_topbar_search"/>


    <ImageView
        android:id="@+id/topbar_addcontect_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@mipmap/icon_topbar_add_contact"
        />

    <ImageView
        android:id="@+id/topbar_writesms_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@mipmap/icon_topbar_writesms"
        />
    <ImageView
        android:id="@+id/topbar_setting_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@mipmap/icon_topbar_setting"
        />
</LinearLayout>
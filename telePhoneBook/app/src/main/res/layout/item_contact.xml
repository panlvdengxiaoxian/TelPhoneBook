<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:src="@mipmap/calllog_calling_pop_custom_normalhead"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/item_contact_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/contact_text_size"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/item_contact_num_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/contact_telNum_size"/>
</LinearLayout>